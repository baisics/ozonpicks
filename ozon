<script>
   function switchImage(id, newSrc, clickedEl) {
    document.getElementById(id).src = newSrc;
    const siblings = clickedEl.parentNode.querySelectorAll('img');
    siblings.forEach(img => img.style.border = "2px solid transparent");
    clickedEl.style.border = "2px solid #8b0000";
  }
  
let cartCount = 0;
function addToCart(button) {
  const product = button.closest('.product');
  const name = product.querySelector('h3') ? product.querySelector('h3').innerText : 'Item';
  const size = product.querySelector('select') ? product.querySelector('select').value : '';
  const quantity = product.querySelector('input[type=number]') ? parseInt(product.querySelector('input[type=number]').value) : 1;
  cartCount += quantity;
  document.getElementById('cart-count').innerText = cartCount;
  alert(`Added to cart:\n${name}\nSize: ${size}\nQuantity: ${quantity}`);
}

let cartItems = [];

function addToCart(button) {
  const product = button.closest('.product');
  const name = product.querySelector('h3') ? product.querySelector('h3').innerText : 'Item';
  const size = product.querySelector('select') ? product.querySelector('select').value : '';
  const quantity = product.querySelector('input[type=number]') ? parseInt(product.querySelector('input[type=number]').value) : 1;

  cartItems.push({ name, size, quantity });

  let cartCount = cartItems.reduce((sum, item) => sum + item.quantity, 0);
  document.getElementById('cart-count').innerText = cartCount;

  alert(`Added to cart:\n${name}\nSize: ${size}\nQuantity: ${quantity}`);
}

// Function to open WhatsApp with cart content
function orderViaWhatsApp() {
  if (cartItems.length === 0) {
    alert("Your cart is empty.");
    return;
  }
  let message = "Hello, I want to order:\n";
  cartItems.forEach((item, index) => {
    message += `${index + 1}. ${item.name} - Size: ${item.size} - Qty: ${item.quantity}\n`;
  });
  const encoded = encodeURIComponent(message);
  const whatsappUrl = `https://wa.me/60123456789?text=${encoded}`;
  window.open(whatsappUrl, "_blank");
}
</script>
