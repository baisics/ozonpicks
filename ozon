<script>
let cart = [];

function addToCart(button) {
  const product = button.closest('.product');
  const name = product.querySelector('h3')?.innerText || 'Item';
  const size = product.querySelector('select')?.value || '';
  const qty = parseInt(product.querySelector('input[type=number]')?.value || 1);
  const price = 100;
  cart.push({ name, size, qty, price });
  updateCartDisplay();
  openCart();
}

function updateCartDisplay() {
  const container = document.getElementById("cartItems");
  const count = document.getElementById("cart-count");
  const totalDisplay = document.getElementById("cartTotal");
  container.innerHTML = "";
  let total = 0;

  cart.forEach((item, i) => {
    total += item.qty * item.price;
    container.innerHTML += `
      <div style='border-bottom:1px solid #ccc;padding:10px 0;'>
        <strong>${item.name}</strong><br>
        Size: ${item.size}<br>
        Qty: ${item.qty}<br>
        Price: RM${(item.qty * item.price).toFixed(2)}<br>
        <button onclick="removeItem(${i})" style="margin-top:5px;">Remove</button>
      </div>`;
  });

  count.innerText = cart.reduce((s, i) => s + i.qty, 0);
  totalDisplay.innerText = "Total: RM " + total.toFixed(2);
}

function removeItem(i) {
  cart.splice(i, 1);
  updateCartDisplay();
}

function openCart() {
  document.getElementById("cartDrawer").style.display = "block";
  document.getElementById("cartOverlay").style.display = "block";
}

function closeCart() {
  document.getElementById("cartDrawer").style.display = "none";
  document.getElementById("cartOverlay").style.display = "none";
}

function checkoutWhatsApp() {
  if (cart.length === 0) return alert("Your cart is empty.");
  let message = "Hello, I want to order:\n";
  let total = 0;
  cart.forEach(item => {
    message += `- ${item.name} (Size: ${item.size}, Qty: ${item.qty}) - RM${item.qty * item.price}\n`;
    total += item.qty * item.price;
  });
  message += `\nTotal: RM${total}`;
  window.open("https://wa.me/60123456789?text=" + encodeURIComponent(message), "_blank");
}
</script></body>
</html>
